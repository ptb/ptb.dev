{
  "dependencies": {
    "@ptb/style": "latest",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "1.2.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-plugin-compat": "latest",
    "eslint-plugin-fp": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-json": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-promise": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-standard": "latest",
    "express": "4.17.3",
    "npm-run-all": "4.1.5",
    "prettier-eslint": "latest",
    "prettier-eslint-cli": "latest",
    "typescript": "latest",
    "vite": "2.8.6",
    "vite-plugin-babel-macros": "1.0.6",
    "vite-plugin-ssr": "0.3.60"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "parser": "babel",
    "printWidth": 70,
    "proseWrap": "always",
    "requirePragma": false,
    "semi": false,
    "singleAttributePerLine": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "scripts": {
    "build": "npm-run-all build:csr build:ssr build:ssg",
    "build:csr": "vite build",
    "build:ssg": "vite-plugin-ssr prerender --outDir www",
    "build:ssr": "vite build --ssr",
    "lint": "eslint --fix src",
    "serve": "cross-env NODE_ENV=production npm-run-all build start",
    "start": "node ./server.js",
    "tidy": "prettier-eslint --write \"src/**/*.{js,jsx}\""
  },
  "type": "module"
}
