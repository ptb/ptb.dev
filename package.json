{
  "author": "Peter T Bosse II <ptb@ioutime.com> (http://ptb2.me/)",
  "ava": {
    "babel": false,
    "extensions": [
      "js"
    ],
    "failFast": false,
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "esm"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "verbose": true
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "pragmaFrag": "Fragment"
        }
      ]
    ]
  },
  "browserslist": [
    "> 0.5%",
    "and_chr >= 29",
    "and_ff >= 57",
    "and_qq >= 1.2",
    "and_uc >= 11.4",
    "android >= 5",
    "baidu >= 7.12",
    "bb >= 10",
    "chrome >= 29",
    "edge >= 12",
    "firefox >= 27",
    "ie >= 11",
    "ie_mob >= 11",
    "ios_saf >= 5",
    "last 2 versions",
    "not dead",
    "op_mob >= 12.1",
    "opera >= 16",
    "safari >= 7",
    "samsung >= 4"
  ],
  "devDependencies": {
    "@amory/eslint-config": "latest",
    "ava": "1.3.1",
    "esm": "3.2.16",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5",
    "nyc": "13.3.0"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "extends": [
      "@amory"
    ]
  },
  "license": "(Apache-2.0 OR MIT)",
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\""
    },
    "exec": "yarn watch",
    "ext": "js"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.test.js"
    ],
    "extension": [
      ".js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "temp-dir": "/tmp/.nyc_output"
  },
  "private": true,
  "renovate": {
    "automerge": true,
    "extends": [
      "config:base"
    ]
  },
  "repository": "https://github.com/ptb/ptb.dev/tree/master",
  "scripts": {
    "clean": "git clean -fdX",
    "fcov:file": "f () { flow-coverage-report --include-glob ${1}.js || exit 0; }; f",
    "flow:file": "f () { flow focus-check ${1}.js || exit 0; }; f",
    "lint": "f () { eslint --ext .js src || exit 0; }; f",
    "lint:file": "f () { eslint --config ./node_modules/@amory/eslint-config/.eslintrc.json \"${1}\" || exit 0; }; f",
    "start": "nodemon",
    "start:file": "f () { run-s \"test:file $1\" \"lint:file $1\" \"flow:file $1\" \"fcov:file $1\"; }; f",
    "test": "f () { nyc ava || exit 0; }; f",
    "test:file": "f () { nyc --include ${1}.js ava ${1}.test.js || exit 0; }; f",
    "tidy:file": "f () { prettier-eslint --eslint-config-path @amory --write \"${1}\" || exit 0; }; f",
    "watch": "npm-run-all -s test lint"
  },
  "workspaces": [
    "env/flow",
    "env/git",
    "env/node",
    "env/lodash",
    "env/react/dom",
    "env/react/dom/server",
    "env/react/only",
    "env/vscode"
  ]
}
