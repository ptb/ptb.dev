{
  "author": "Peter T Bosse II <ptb@ioutime.com> (http://ptb2.me/)",
  "ava": {
    "babel": false,
    "extensions": [
      "js"
    ],
    "failFast": false,
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "esm"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "verbose": true
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-jsx",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "pragmaFrag": "Fragment"
        }
      ],
      "@babel/plugin-transform-flow-comments"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "and_chr >= 29",
    "and_ff >= 57",
    "and_qq >= 1.2",
    "and_uc >= 11.4",
    "android >= 5",
    "baidu >= 7.12",
    "bb >= 10",
    "chrome >= 29",
    "edge >= 12",
    "firefox >= 27",
    "ie >= 11",
    "ie_mob >= 11",
    "ios_saf >= 5",
    "last 2 versions",
    "not dead",
    "op_mob >= 12.1",
    "opera >= 16",
    "safari >= 7",
    "samsung >= 4"
  ],
  "devDependencies": {
    "@amory/eslint-config": "latest",
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-syntax-jsx": "7.10.4",
    "@babel/plugin-transform-flow-comments": "7.10.4",
    "@babel/plugin-transform-react-jsx": "7.10.4",
    "ava": "3.10.1",
    "esm": "3.2.25",
    "jsdoc": "3.6.5",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "sinon": "9.0.2",
    "tsd-jsdoc": "2.5.0",
    "tslint": "6.1.2",
    "typescript": "3.9.7"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "extends": [
      "@amory"
    ]
  },
  "eslintIgnore": [
    "src/vendor/*.js"
  ],
  "flow-coverage-report": {
    "globExcludePatterns": [
      "src/**/*.test.js",
      "src/vendor/*.js"
    ],
    "globIncludePatterns": [
      "src/**/*.js"
    ]
  },
  "license": "(Apache-2.0 OR MIT)",
  "nodemonConfig": {
    "events": {
      "start": "echo \"\\x1Bc\""
    },
    "exec": "yarn watch",
    "ext": "js"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.test.js",
      "src/vendor/*.js"
    ],
    "extension": [
      ".js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "temp-dir": "/tmp/.nyc_output"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "parser": "babel",
    "printWidth": 78,
    "proseWrap": "always",
    "requirePragma": false,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "private": true,
  "renovate": {
    "automerge": true,
    "extends": [
      "config:base"
    ]
  },
  "repository": "https://github.com/ptb/ptb.dev/tree/master",
  "scripts": {
    "build:babel": "f () { babel './src/' -d './web/' -x '.jsx'; }; f",
    "clean": "f () { git clean -e '!/src/*' -dfX || exit 0; }; f",
    "fcov": "f () { flow-coverage-report || exit 0; }; f",
    "fcov:file": "f () { flow-coverage-report --include-glob ${1}.js || exit 0; }; f",
    "flow": "f () { flow || exit 0; }; f",
    "flow:file": "f () { flow focus-check ${1}.js || exit 0; }; f",
    "lint": "f () { eslint --plugin flowtype-comment src || exit 0; }; f",
    "lint:file": "f () { eslint --fix \"${1}\" || exit 0; }; f",
    "lint:fix": "f () { eslint --fix src || exit 0; }; f",
    "start": "nodemon",
    "test": "f () { nyc ava || exit 0; }; f",
    "test:file": "f () { nyc --include ${1}.js ava ${1}.test.js || exit 0; }; f",
    "tidy": "f () { prettier-eslint --write \"src/**/*.js\" || exit 0; }; f",
    "tidy:file": "f () { prettier-eslint --write \"${1}\" || exit 0; }; f",
    "ts": "f () { tsc -p . || exit 0; }; f",
    "watch": "f () { npm-run-all -s test fcov lint flow ts || exit 0; }; f"
  },
  "workspaces": [
    "env/ava",
    "env/babel",
    "env/browserslist",
    "env/eslint",
    "env/flow",
    "env/git",
    "env/lodash",
    "env/node",
    "env/nodemon",
    "env/prettier",
    "env/typescript",
    "env/vscode"
  ]
}
